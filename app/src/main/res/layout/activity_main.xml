<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/quote_2"
        android:layout_width="347dp"
        android:layout_height="267dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quote_1"
        app:layout_constraintVertical_bias="0.59"
        app:srcCompat="@drawable/quote_1" />

    <ImageView
        android:id="@+id/quote_1"
        android:layout_width="347dp"
        android:layout_height="267dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/quotw_2" />

    <Button
        android:id="@+id/share_1"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:text="Share"
        app:backgroundTint="#1B245C"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/quote_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quote_1"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/share_2"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:text="Share"
        app:backgroundTint="#1B245C"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quote_2"
        app:layout_constraintVertical_bias="0.177" />

</androidx.constraintlayout.widget.ConstraintLayout>